{
    "compilerOptions": {
        "types": [
            "mocha",
            "chai"
        ],
        "typeRoots": [
            "./node_modules/@types"
        ],
        "lib": [
            "es2015"
        ],
        "module": "commonjs",
        "target": "es6",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "strict": true,
        "outDir": "./dist",
        "rootDir": "./"
    },
    "include": [
        "tests/**/*.ts",
        "cli/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "app"
    ]
}